<import src="post-item/post-item-template.wxml"/>

<view >
  <swiper indicator-dots="true" autoplay="true" interval="5000">
    <swiper-item>
      <image src="/images/meibisi-1.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/meibisi-2.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/meibisi-3.jpg"></image>
    </swiper-item>
  </swiper>

  <block wx:for="{{posts_content}}" wx:key="postId" wx:for-item="item" wx:for-index="idx">
    <view bindtap="onPostTap" data-post-id="{{item.postId}}">
      <template is="postItem" data="{{...item}}"/>
    </view>
  </block>
</view>